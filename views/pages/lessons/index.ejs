<% contentFor('body') %>
<section style="padding: 30px;">
    <%- include('./components/lessons-table') %>
</section>

<% contentFor('style') %>
<style>
    table {
        display: grid;
        width: 100%;
        border-collapse: collapse;
        grid-template-columns: repeat(5, 1fr);
        overflow-x: auto;
    }

    thead {
        display: contents;
    }

    tbody {
        display: contents;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #4472C4;
        color: white;
    }

    tr {
        display: contents;
    }

    tr:hover td {
        filter: brightness(80%);
    }

    tr:nth-child(even) td {
        background-color: #e9e9e9;
        color: #111;
        font-weight: bold;
    }

    caption {
        caption-side: top;
        font-size: 1.5em;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

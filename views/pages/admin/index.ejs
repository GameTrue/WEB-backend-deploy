<% contentFor('body') %>
<div class="admin-container">
  <h1 class="page-title">Панель администратора</h1>
  
  <section class="admin-dashboard">
    <div class="admin-tabs">
      <button class="admin-tab" data-tab="users">Пользователи</button>
      <button class="admin-tab" data-tab="courses">Курсы</button>
      <button class="admin-tab" data-tab="categories">Категории</button>
      <button class="admin-tab" data-tab="statistics">Статистика</button>
    </div>
    
    <div class="admin-content">
      <!-- Вкладка пользователей -->
      <%- include('./components/users-tab') %>
      
      <!-- Вкладка курсов -->
      <%- include('./components/courses-tab') %>
      
      <!-- Вкладка категорий -->
      <%- include('./components/categories-tab') %>
      
      <!-- Вкладка статистики -->
      <%- include('./components/statistics-tab') %>
    </div>
  </section>
  
  <section class="admin-section">
    <h2>Управление системой</h2>
    
    <div class="admin-card">
      <h3>Управление кэшем</h3>
      <p>Если вы видите устаревшие данные или возникли проблемы с отображением информации, попробуйте очистить кэш.</p>
      <button onclick="clearCoursesCache()" class="btn btn-danger">Очистить кэш курсов</button>
    </div>
  </section>
  
  <!-- Модальные окна -->
  <%- include('./components/edit-user-modal') %>
  <%- include('./components/view-user-modal') %>
  <%- include('./components/edit-course-modal') %>
  <%- include('./components/view-course-modal') %>
</div>

<% contentFor('style') %>
<link rel="stylesheet" href="/css/admin.css">

<% contentFor('script') %>
<script src="/js/admin.js"></script>
<script src="/js/admin/users.js"></script>
<script src="/js/admin/courses.js"></script>
<script src="/js/admin/categories.js"></script>
<script src="/js/admin/statistics.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/admin/cache-manager.js"></script>

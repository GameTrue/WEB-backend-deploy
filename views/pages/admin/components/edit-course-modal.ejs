<div class="admin-modal" id="edit-course-modal">
  <div class="admin-modal-content">
    <div class="admin-modal-header">
      <h2 class="admin-modal-title">Редактирование курса</h2>
      <button class="admin-modal-close">&times;</button>
    </div>
    <div class="admin-modal-body">
      <form id="edit-course-form">
        <input type="hidden" id="course-id" name="id">
        
        <div class="admin-form-group">
          <label for="course-title">Название курса</label>
          <input type="text" id="course-title" name="title" required>
        </div>
        
        <div class="admin-form-group">
          <label for="course-description">Описание</label>
          <textarea id="course-description" name="description" rows="4"></textarea>
        </div>
        
        <div class="admin-form-group">
          <label for="course-category">Категория</label>
          <select id="course-category" name="categoryId">
            <option value="">Без категории</option>
            <!-- Категории будут добавлены через JS -->
          </select>
        </div>
        
        <div class="admin-form-group">
          <label for="course-level">Уровень сложности</label>
          <select id="course-level" name="level">
            <option value="beginner">Начинающий</option>
            <option value="intermediate">Средний</option>
            <option value="advanced">Продвинутый</option>
          </select>
        </div>
        
        <div class="admin-form-group">
          <label for="course-price">Цена (руб.)</label>
          <input type="number" id="course-price" name="price" min="0" step="1">
        </div>
        
        <div class="admin-form-group checkbox">
          <input type="checkbox" id="course-published" name="published">
          <label for="course-published">Опубликовано</label>
        </div>
      </form>
    </div>
    <div class="admin-modal-footer">
      <button class="admin-button" id="save-course-btn">Сохранить</button>
      <button class="admin-modal-close button-grey">Отмена</button>
    </div>
  </div>
</div>

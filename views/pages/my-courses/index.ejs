<% contentFor('body') %>
<div class="teacher-container">
  <div class="teacher-header">
    <h1 class="page-title">Мои курсы</h1>
    <a href="/courses/my/create" class="button-blue create-course-btn">Создать курс</a>
  </div>
  
  <div class="courses-dashboard">
    <%- include('./components/stats') %>
    
    <div class="courses-list">
      <div class="courses-header">
        <h2>Ваши курсы</h2>
        <div class="courses-filter">
          <label for="course-filter">Фильтр:</label>
          <select id="course-filter">
            <option value="all">Все курсы</option>
            <option value="published">Опубликованные</option>
            <option value="draft">Черновики</option>
          </select>
        </div>
      </div>
      
      <div id="courses-preloader">
        <div class="spinner"></div>
        <p>Загружаем ваши курсы...</p>
      </div>
      
      <div id="courses-empty" style="display: none;">
        <%- include('./components/empty-courses') %>
      </div>
      
      <div class="teacher-courses-grid" id="teacher-courses-grid">
        <!-- Courses will be loaded here -->
      </div>
    </div>
    
    <div id="notifications" class="notifications">
      <!-- Notifications will appear here -->
    </div>
  </div>
</div>

<% contentFor('style') %>
<link rel="stylesheet" href="/css/my-courses.css">

<% contentFor('script') %>
<script src="/js/my-courses/index.js"></script>

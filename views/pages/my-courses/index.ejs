<% contentFor('body') %>
<div class="container">
  <h1 class="page-title">Мои курсы</h1>
  
  <section class="teacher-dashboard">
    <div class="dashboard-header">
      <h2>Панель управления курсами</h2>
      <button class="button-blue create-course-btn">+ Создать новый курс</button>
    </div>
    
    <div class="courses-list">
      <div id="teacher-preloader">Загрузка ваших курсов...</div>
      <div class="teacher-courses-grid" id="teacher-courses-grid">
        <!-- Курсы будут загружены сюда -->
      </div>
    </div>
  </section>
</div>

<% contentFor('style') %>
<style>
  .page-title {
    color: var(--color-text-dark);
    margin: 20px 0;
    text-align: center;
  }
  
  .teacher-dashboard {
    background-color: var(--color-background-light);
    border-radius: 10px;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }
  
  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    color: var(--color-text-dark);
  }
  
  .create-course-btn {
    padding: 10px 15px;
    border-radius: 5px;
    font-weight: bold;
  }
  
  .teacher-courses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
  }
</style>

<% contentFor('script') %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Функционал страницы будет добавлен позже
    console.log('My Courses page loaded');
  });
</script>
